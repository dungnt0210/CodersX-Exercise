<p id="count"></p>
<button onClick="addCount()">
  Count
</button>
<script type=text/javascript>
var count = 0;
var counter = document.getElementById('count');

// Tạo 1 button mới nằm dưới p
// Viết code sao cho khi click button đó thì giá trị biến `count` tăng 1 đơn vị và nội dung của `counter` cũng thay đổi theo`
function addCount(){
	count++;
  counter.innerHTML = count;
}
</script>

// Viết code sao cho khi ấn vào nút `Clear`, chữ trong input sẽ bị xoá
// Kiểm tra bằng cách gõ chữ vào ô tìm kiếm vào ấn `Clear`
<input type="text" id="searchBox" placeholder="Search..." />
<button>Search</button>
<button>Clear</button>

<input type="text" id="searchBox" placeholder="Search..." />
<button>Search</button>
<button onclick="clearInput()">Clear</button>
<script type=text/javascript>
  function clearInput(){
   document.getElementById('searchBox').value='';
  }
</script>
// Viết code sao cho khi nhập tên ai đó vào ô input, click vào nút Say Hi! sẽ hiển thị ra alert box với nội dung: Hi kèm theo tên người đó. Ví dụ: Hi Coders.Tokyo
function sayHello(){
	 var input= document.getElementById("name");
   var str= input.value;
   alert("Hi "+str);
}
